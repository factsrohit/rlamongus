{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Dev: Node Server + React Dev",
      "configurations": ["Node Server", "React Dev"]
    }
  ],
  "configurations": [
    // ---------------- Development Node Server ----------------
    {
      "type": "node",
      "request": "launch",
      "name": "Node Server",
      "program": "${workspaceFolder}/server.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },

    // ---------------- React Dev Server ----------------
    {
      "type": "node",
      "request": "launch",
      "name": "React Dev",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/react-frontend",
      "console": "integratedTerminal"
    },

    // ---------------- Production Build ----------------
    {
      "type": "node",
      "request": "launch",
      "name": "React Build",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build"],
      "cwd": "${workspaceFolder}/react-frontend",
      "console": "integratedTerminal"
    },

    // ---------------- Serve Production ----------------
    {
      "type": "node",
      "request": "launch",
      "name": "Node Server (Production)",
      "program": "${workspaceFolder}/server.js",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
